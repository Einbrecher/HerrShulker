{
  "schemaVersion": 1,
  "id": "herrshulker",
  "version": "${version}",
  "name": "Herr Shulker",
  "description": "Allows attaching items to display on the lids of your shulker boxes for better inventory management. A fork of MrShulker by Mr.Mindor.",
  "authors": [
    "Einbrecher"
  ],
  "contributors": [
    "Mr.Mindor (original MrShulker author)",
    "N (tnoctua)"
  ],
  "contact": {
    "homepage": "https://github.com/mrmindor/MrShulker"
  },
  "license": "GPL-3.0",
  "icon": "assets/herrshulker/icon.png",
  "environment": "*",
  "entrypoints": {
    "fabric-datagen": [
      "net.tinkstav.herrshulker.client.HerrShulkerDataGenerator"
    ],
    "client": [
      "net.tinkstav.herrshulker.client.HerrShulkerClient"
    ],
    "main": [
      "net.tinkstav.herrshulker.HerrShulker"
    ]
  },
  "mixins": [
    "herrshulker.mixins.json",
    {
      "config": "herrshulker.client.mixins.json",
      "environment": "client"
    }
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "minecraft": "~1.21.10",
    "fabric-api": "*"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.github" : "https://github.com/mrmindor/MrShulker"
      },
      "update_checker": false
    }
  }
}
